<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.TestDragViewActivity">


        <ImageView
            android:id="@+id/iv_monster"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#00ffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08" />


        <ImageView
            android:id="@+id/iv_crit_bg"
            android:background="@color/selected_blue"
            android:layout_width="40dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="@+id/tv_crit"
            app:layout_constraintEnd_toEndOf="@+id/tv_crit"
            app:layout_constraintBottom_toBottomOf="@+id/tv_crit"
            app:layout_constraintStart_toStartOf="@+id/tv_crit"/>

        <TextView
            android:id="@+id/tv_crit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1100"
            android:textColor="#ff0000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.359" />


        <TextView
            android:id="@+id/iv_animate_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1100"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.359"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.833" />

        <Button
            android:id="@+id/btn_show_dilog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="298dp"
            android:layout_marginTop="338dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="45dp"
            android:text="弹出"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="298dp"
            android:layout_marginTop="338dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="45dp"
            android:text="攻击"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>