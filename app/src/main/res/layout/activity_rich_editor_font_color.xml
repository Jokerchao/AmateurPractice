<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_rich_editor_font_color"
    android:layout_width="0dp"
    android:visibility="gone"
    android:layout_weight="5"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_rich_editor_test">

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_rich_editor_fc_black"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/selector_circle_fc_black"
        android:gravity="center" />

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_rich_editor_fc_blue"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/selector_circle_fc_blue"
        android:gravity="center" />

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_rich_editor_fc_red"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/selector_circle_fc_red"
        android:gravity="center" />

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_rich_editor_fc_green"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/selector_circle_fc_green"
        android:gravity="center" />

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</LinearLayout>